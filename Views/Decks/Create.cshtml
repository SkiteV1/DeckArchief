@model DeckArchief.ViewModels.ViewDecks

@{
	ViewData["Title"] = "Add new deck.";
}

<h3>@ViewData["Title"]</h3>

<form action="Create" method="post">
	<div class="mb-3">
		<label class="form-label">Deck name</label>
		<input type="text" class="form-control" asp-for="Name" />
		<span asp-validation-for="Name" class="text-primary" />
	</div>
	<div class="mb-3">
		<label class="form-label">Series</label>
		<input type="text" class="form-control" asp-for="Series" />
		<span asp-validation-for="Series" class="text-primary" />
	</div>
	<div class="mb-3">
		<label class="form-label">Price</label>
		<div class="input-group">
			<span class="input-group-text">€</span>
			<input type="text" class="form-control" asp-for="Price" />
			<span asp-validation-for="Price" class="text-primary" />
		</div>
	</div>
	<div class="mb-3">
		<label class="form-label">Brand</label>
		<input type="text" class="form-control" asp-for="BrandName" />
		<span asp-validation-for="BrandName" class="text-primary" />
	</div>
	<div class="mb-3">
		<label class="form-label">Producer</label>
		<input type="text" class="form-control" asp-for="ProducerName" />
		<span asp-validation-for="ProducerName" class="text-primary" />
	</div>
	<div class="mb-3">
		<label class="form-label">Designer</label>
		<input type="text" class="form-control" asp-for="Designer" />
		<span asp-validation-for="Designer" class="text-primary" />
	</div>
	<div class="mb-3">
		<label class="form-label">Color</label>
		<input type="text" class="form-control" asp-for="Color" />
		<span asp-validation-for="Color" class="text-primary" />
	</div>
	<div class="mb-3">
		<label class="form-label">Current value</label>
		<div class="input-group">
			<span class="input-group-text">€</span>
			<input type="text" class="form-control" asp-for="CurrentValue1" />
			<span asp-validation-for="CurrentValue1" class="text-primary" />
		</div>
	</div>
	<div class="d-grid">
		<button type="submit" class="btn btn-primary">Save deck</button>
	</div>
	<hr/>
	<hr/>
</form>