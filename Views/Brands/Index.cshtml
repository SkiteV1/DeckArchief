@model List<DeckArchief.ViewModels.ViewBrands>

@{
	ViewData["Title"] = "Brands";
}
<h2>@ViewData["Title"]</h2>
<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
	<div class="container-fluid">
		<a class="navbar-brand" href="Home">Home</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarColor01" data-np-autofill-form-type="other" data-np-checked="1" data-np-watching="1">
			<ul class="navbar-nav me-auto">
				<li class="nav-item">
					<a class="nav-link active" href="Brands">
						Brands
						<span class="visually-hidden">(current)</span>
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">Collections</a>
				</li>
				<li class="nav-item">
					<a class="nav-link active" href="Decks">Decks</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">Producers</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">Wishlists</a>
				</li>
			</ul>
			<form class="d-flex">
				<input class="form-control me-sm-2" type="search" placeholder="Search" data-np-intersection-state="visible">
				<button class="btn btn-info my-2 my-sm-0" type="submit">Search</button>
			</form>
		</div>
	</div>
</nav>
<hr />
<form>
	<button asp-action="Create" asp-controller="Brand" class="btn btn-primary mb-3">Add new brand</button>
	<table class="table table-responsive table-bordered table-primary">
		<thead>
			<tr class="table-active">
				<th>Id</th>
				<th>Name</th>
				<th>Adress</th>
				<th>Producer</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null && Model.Any())
			{
				@foreach (var brand in Model)
				{
					<tr>
						<td>@brand.Id</td>
						<td>@brand.Name</td>
						<td>@brand.Adress</td>
						<td>@brand.ProducerName</td>
						<td>
							<div class="btn-group btn-group-sm">
								<a asp-controller="Brand" asp-action="Edit" asp-route-id="@brand.Id" class="btn btn-light">Edit</a>
								<a asp-controller="Brand" asp-action="Delete" asp-route-id="@brand.Id" class="btn btn-danger">Delete</a>
							</div>
						</td>
					</tr>
				}
			}
			else
			{
				<tr>
					<td colspan="4">
						<div>
							At this point in time, there are no brands available. Please try again later.
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</form>

